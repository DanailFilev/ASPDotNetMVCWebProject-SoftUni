@model DetailsViewModel

@{
    ViewBag.Title = "Book Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <img class="card-img-top mx-auto d-block" style="width: 18rem;" src="@Model.ImageUrl" alt="Book Image">
        <div class="card-body">
            <h3 class="card-title text-center">@Model.Title</h3>
            <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="mb-0"><span class="fw-bold">Author: </span>@Model.AuthorFullName</p>
            <p class="mb-0"><span class="fw-bold">Genre: </span>@Model.GenreName</p>
            <p class="mb-0"><span class="fw-bold">Price: </span>@Model.Price</p>
            <p class="mb-0"><span class="fw-bold">Stock Quantity: </span>@Model.StockQuantity</p>
        </div>

        <a asp-controller="Book" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Books</a>
        @* Assuming you have an Edit action in your Event controller *@
@*        @if (User.Identity.Name == Model.Organiser)
        {*@
            <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit</a>
@*        }*@
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}